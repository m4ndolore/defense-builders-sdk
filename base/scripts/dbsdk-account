# Main function
main() {
    local command="${1:-status}"
    shift 2>/dev/null || true
    
    case "$command" in
        "login")
            handle_login "$@"
            ;;
        "logout")
            handle_logout "$@"
            ;;
        "status")
            show_auth_status "$@"
            ;;
        "subscription")
            show_subscription_info "$@"
            ;;
        "upgrade")
            show_upgrade_info "$@"
            ;;
        "help"|"-h"|"--help")
            show_help
            ;;
        *)
            log_error "Unknown command: $command"
            echo ""
            show_help
            exit 1
            ;;
    esac
}

# Run main function
main "$@"